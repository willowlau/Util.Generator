<Grid x:Class="Util.Generators.Views.MainNonClientArea"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      Height="29">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
        <Border Margin="0,0,0,0" VerticalAlignment="Center" CornerRadius="2" Padding="10,4">
            <TextBlock FontWeight="Bold" Text="{DynamicResource App.Title}" VerticalAlignment="Center"
                       Foreground="{DynamicResource PrimaryTextBrush}" />
        </Border>
        <Border Margin="0,0,0,0" VerticalAlignment="Center" CornerRadius="2" Padding="10,4"
                Background="{DynamicResource SecondaryRegionBrush}">
            <TextBlock FontWeight="Bold" Text="{Binding VersionInfo}" VerticalAlignment="Center"
                       Foreground="{DynamicResource PrimaryTextBrush}" />
        </Border>
    </StackPanel>
</Grid>