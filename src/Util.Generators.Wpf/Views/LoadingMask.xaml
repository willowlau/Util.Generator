<Border
    x:Class="Util.Generators.Views.LoadingMask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Util.Generators.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{DynamicResource RegionBrush}"
    BorderBrush="{DynamicResource BorderBrush}"
    BorderThickness="1"
    CornerRadius="10"
    Opacity="0.9"
    mc:Ignorable="d">
    <Viewbox Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <hc:LoadingCircle />
            <TextBlock Padding="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" 
                Style="{StaticResource TextBlockDefault}" Text="{DynamicResource Common.Loading}" />
        </StackPanel>
    </Viewbox>
</Border>